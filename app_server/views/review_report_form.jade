extends layout

block content
  .row.page-header
    .col-lg-12
      br
      h1.text-warning.text-center.size.italic= title
  .row
    .col-xs-12.col-md-6.mx-auto
      .card.card-outline-primary.bg_y
        form(action="", method="post", role="form", name="addReport")
          .form-group.card-block
            label.col-lg-12.col-xs-12.col-sm-12.text-primary.size_label.form-control-label(for="reviewAuthor_name") Review Author
            input(type="hidden", id="location_name", name='location_name', value="#{location_name}")
            input(type="hidden", id="reviewAuthor_name", name='reviewAuthor_name', value="#{reviewAuthor_name}")
            input(type="hidden", id="reviewAuthor_email", name='reviewAuthor_email', value="#{reviewAuthor_email}")
            input(type="hidden", id="whistleblower_name", name='whistleblower_name', value="#{user}")
            input(type="hidden", id="whistleblower_email", name='whistleblower_email', value="#{useremail}")
            .col-xs-12.col-sm-10
              p.text-warning #{reviewAuthor_name}
            label.col-lg-12.col-xs-12.col-sm-12.text-primary.size_label.form-control-label(for="review_content") Review Content
            input(type="hidden", id="review_content", name='review_content', value="#{review_content}")
            .col-lg-12.col-xs-12.col-sm-12
              p.text-warning #{review_content}
            label.col-lg-12.col-xs-12.col-sm-12.text-primary.size_label.form-control-label(for="report_content") Report Reason
            .col-sm-10
              textarea#review.form-control(name="report_content", rows="8", required)
          .card.card-outline-warning.bg_y
            button.btn.btn-warning.float-right Report
        .col-xs-12.col-md-4