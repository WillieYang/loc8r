extends layout

block content
  .row.page-header
    .col-lg-12
      h1.text-warning.text-center= title
  .row
    .col-xs-12.col-md-6.mx-auto
      .card.card-outline-primary.bg_y
        form(action="", method="post", role="form", name="addReview")
          .form-group.card-block
            label.col-xs-10.col-sm-2.text-primary.size_label.form-control-label(for="reviewAuthor_name") Author
            input(type="hidden", id="reviewAuthor_name", name='reviewAuthor_name', value="#{reviewAuthor_name}")
            input(type="hidden", id="reviewAuthor_email", name='reviewAuthor_email', value="#{reviewAuthor_email}")
            input(type="hidden", id="whistlebower_name", name='whistlebower_name', value="#{user}")
            input(type="hidden", id="whistlebower_email", name='whistlebower_email', value="#{useremail}")
            .col-xs-12.col-sm-10
              p.text-warning #{reviewAuthor_name}
            label.col-xs-10.col-sm-2.text-primary.size_label.form-control-label(for="review_content") Review
            input(type="hidden", id="review_content", name='review_content', value="#{review_content}")
            .col-xs-12.col-sm-2
              p.text-warning #{review_content}
          .form-group.card-block
            label.col-sm-2.text-primary.size_label.form-control-label(for="report_content") Reason
            .col-sm-10
              textarea#review.form-control(name="report_content", rows="8", required)
          .card.card-outline-warning.bg_y
            button.btn.btn-warning.float-right Report
        .col-xs-12.col-md-4

