extends layout

block content
  .row.page-header
    .col-lg-12
      br
      h1.text-warning.italic.size.text-center= title
  .row
    .col-xs-12.col-md-6.mx-auto
      .card.card-outline-primary.bg_y
        form(action="", method="post", role="form", name="reportContact")
          .form-group.card-block
            label.col-lg-12.col-xs-12.col-sm-12.text-primary.size_label.form-control-label(for="contact_name") Send to
            input(type="hidden", id="contact_name", name='contact_name', value="#{contact_name}")
            input(type="hidden", id="contact_email", name='contact_email', value="#{contact_email}")
            //- input(type="hidden", id="whistlebower_name", name='whistlebower_name', value="#{user}")
            //- input(type="hidden", id="whistlebower_email", name='whistlebower_email', value="#{useremail}")
            .col-xs-12.col-sm-10
              p.text-warning #{contact_name}
            label.col-lg-12.col-xs-12.col-sm-12.text-primary.size_label.form-control-label(for="contact_email") Email Address
            //- input(type="hidden", id="review_content", name='review_content', value="#{review_content}")
            .col-lg-12.col-xs-12.col-sm-12
              p.text-warning #{contact_email}
          .form-group.card-block
            label.col-lg-12.col-xs-12.col-sm-12.text-primary.size_label.form-control-label(for="send_content") Content
            .col-sm-10
              textarea#review.form-control(name="send_content", rows="8", required)
          .card.card-outline-warning.bg_y
            button.btn.btn-warning.float-right Contact
        .col-xs-12.col-md-4