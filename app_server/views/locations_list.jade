extends layout

include _includes/sharedHTMLfunctions

block content
  .page-header
    .row
      .col-lg-6
        h1.sideword
          strong.fa.fa-location-arrow
          small.lead &nbsp;#{pageHeader.title}
  .row
    .col-xs-12.col-sm-8.col-lg-6(ng-controller="locationListCtrl")
      h4.text-warning
        error= errorMessage
      .row.list-group
        .col-xs-12.col-lg-12.list-group-item.list-group-item-action.active(ng-repeat="location in data.locations")
          h4.list-group-item-heading
            a(href="/location/{{ location._id }}" class="text-warning") {{ location.name }} 
            | &nbsp;
            small
              +outputRating{{ location.rating }}
            span.badge.float-right.badge-pill.badge-default {{ location.distance }}
            p.h6.list-group-item-text {{ location.address }}
            p.h6
                span.badge.badge-pill.badge-warning(ng-repeat="facility in location.facilities") 
                  {{ facility }} 
                | &nbsp;

    .col-xs-12.col-sm-4
      p.lead.sideword Location Seeking helps you find place to work out. 