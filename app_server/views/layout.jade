doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/pulse.bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/font-awesome/css/font-awesome.css')
  body
    nav(class="navbar navbar-toggleable-md navbar-inverse bg-primary")
      button(class="navbar-toggler navbar-toggler-right collapsed", type="button", data-toggle="collapse", data-target="#navbarColor01", aria-controls="navbarColor01" aria-expanded="false", aria-label="Toggle navigation") #[span(class="navbar-toggler-icon")]
      a(class="navbar-brand", href="/users/") 
        strong.text-warning Location Seeking

      div(class="navbar-collapse collapse show", id="navbarColor01", aria-expanded="true")
        ul(class="navbar-nav mr-auto")
          if user
            li(class="nav-item")
              a(class="nav-link text-warning", href="/users/") Hello #{user}
            li(class="nav-item")
              a(class="nav-link text-warning", href="/users/#{userid}/lovedLocations") Loved Locations
            li(class="nav-item")
              a(class="nav-link text-warning", href="/users/logout/") Logout
            li(class="nav-item")
              a(class="nav-link text-warning", href="/about/") About
          else
            li(class="nav-item active")
              a(class="nav-link text-warning", href="/users/") Home
            li(class="nav-item")
              a(class="nav-link text-warning", href="/users/login/") Sign In
            li(class="nav-item")
              a(class="nav-link text-warning", href="/users/signup/") Sign Up
            li(class="nav-item")
              a(class="nav-link text-warning", href="/about/") About
        form(class="form-inline", action="/results", method="post", role="form")
          input(class="form-control mr-sm-2 btn-warning", type="text",placeholder="Search", id="query", name="query")
          button(class="btn btn-warning my-2 my-sm-0", type="submit") Search

    block content

    footer.footer
      .container
        p.text-center
          em.text-warning &copy; Sheng Yang 2017

    script(src='/javascripts/jquery-3.1.1.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/jquery.validate.min.js')
    script(src='/javascripts/validation.js')
    script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBdYwkASpTD2BHtJlVDwjDf6FT3JHuYfW0&callback=initMap')


